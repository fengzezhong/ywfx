<!DOCTYPE html>
<html lang='zh_CN'>

<head>
    <!-- Metadata -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{projcfg.appname}}</title>

    <!-- Bootstrap -->
    <link href='/static/{{projcfg.theme}}/bootstrap/3.3.5/css/bootstrap.min.css' rel='stylesheet'/>

    <!-- font awesome -->
    <link href="/static/css/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet" />



    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="/static/js/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="/static/js/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/static/{{projcfg.theme}}/bootstrap/3.3.5/js/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/static/{{projcfg.theme}}/bootstrap/3.3.5/js/bootstrap.min.js"></script>

</head>
<body>
  <header class="main-header visible-lg"  style="background-image1: url(http://image.golaravel.com/5/c9/44e1c4e50d55159c65da6a41bc07e.jpg)">
      <div class="container">
          <div class="row">
              <div class="col-sm-12">

                  <h1>App Name</h1>

              </div>

          </div>
      </div>
  </header>
      <nav class="navbar navbar-inverse navbar">
          <div class="container">
              <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </button>
                  <a class="navbar-brand hidden-lg " href="/">App Title</a>
              </div>
              <div id="navbar" class="collapse navbar-collapse">
                  <ul class="nav navbar-nav">
                      {{#each sysmenus}}

                          <li class="dropdown " >

                          {{#if children}}
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ menu_name }} <span class="caret"></span></a>
                              <ul class="dropdown-menu" >
                                  {{#each children}}

                                      <li class=" " >


                                      <a href="{{ menu_code }}">{{menu_name}}</a>
                                  </li>
                                  {{/each}}
                              </ul>
                          {{else}}
                              <a href="{{menu_code}}">{{menu_name}}</a>
                          {{/if}}



                      </li>
                      {{/each}}



                  </ul>
                  <div>
                      <p class="navbar-text navbar-right">
                          欢迎:{{user.name}}&nbsp;
                          <a href="/logout" class="navbar-link">Logout</a>&nbsp;&nbsp;
                      </p>

                  </div>
              </div><!--/.nav-collapse -->

          </div>

      </nav>


      <div class="container ">


              <div class="navbar-left hidden" class="col-xs-2 col-sm-2 col-lg-2" id="myScrollspy">
                  <ul class="nav navbar-left nav-stacked" data-spy="affix" data-offset-top="10">
                      {{#each config.appnavi}}
                          {{#if  items }}
                              {{#each items}}
                                  <li>
                                      <a href="{{ url }}">{{ name }}</a>
                                  </li>
                              {{/each}}

                          {{/if}}
                      {{/each}}
                  </ul>
              </div>
              <div class="container-fluid">
                  {{{body}}}

              </div>

      </div><!-- /.container -->
      <div>
      <p> &nbsp;</p>
      <p> &nbsp;</p>
      </div>
      <footer class="navbar-fixed-bottom " role="contentinfo" style="background1:#000000;">
          <div class="container-fluid">
              <p align="center" style="margin-top: 20px;color:#878B91;">
                  <small>CopyRight</small>
              </p>
          </div>
      </footer>


  </body>
</html>
