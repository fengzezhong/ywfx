<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="widget" style="margin:0px;">
            <div class="widget-body">
                <div id="portal_layout" style="background-color: #fbfbfb;">
                    <div id="testC" region="center" border="false" data-options="fit:true,tools:'#tt'">
                        <div id="pp" style="position:relative;">
                            {{#each layout_cols}}
                            <div style="width:{{this}}%;">
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{#if can_customize}}
<div id="module_list_dialog" class="easyui-layout" style="display: none;">
    <div class="easyui-tabs" data-options="region:'center',fit:true,border:false,tabPosition:'left'">
        {{#each layout_module_types}}
            <div title="{{text}}">
                {{#each ../layout_all_modules}}
                    {{#ifCond ../id module_type}}
                        <dl class="module_list">
                            <dt><img src="/static/images/widget.png"></dt>
                            <dd>
                                <div class="name">
                                    <span class="title">{{module_title}}</span>
                                    <span class="desc">{{module_remark}}</span>
                                </div>
                                <a href="javascript:addModule('{{_id}}','{{module_title}}','{{module_height}}', '{{module_cls}}')">添加</a>
                            </dd>
                        </dl>
                    {{/ifCond}}
                {{/each}}
            </div>
        {{/each}}
    </div>
</div>
{{/if}}
<link rel="stylesheet" type="text/css" href="{{projcfg.appurl}}/static/themes/portal_eui/css/portal.css">
<script type="text/javascript" src="{{projcfg.appurl}}/static/themes/portal_eui/js/jquery.portal.js"></script>
<script>

    function setHeight(){
        var c = $('#portal_layout');
        c.layout('resize',{
            width:'100%',
            height: document.documentElement.clientHeight - 45 -38 - 30 - 53 + 25 //(c.height() + newHeight - oldHeight)
        });
    }

    $(document).ready(function() {
        $('#portal_layout').layout();
        setHeight();
        $(window).resize(function() {setHeight();});
        $('#pp').portal({
            border:false,
            fit:true,
            width:'100%'
            {{#if can_customize}}
            ,
            onStateChange:function() {
                saveLayout('{{layout_id}}');
            }
            {{/if}}
        });
        $('#portal_layout').layout('panel', 'center').panel({
            onResize:function() {
                $('#pp').portal('resize');
            }
        });

        {{#each layout_modules}}
        {{#if module_id._id}}
            var p = $('<div/>').appendTo('body');
            p.panel({
                id:'module_{{module_id._id}}',
                title: '{{module_id.module_title}}',
                href:'/project/portal/module/{{module_id._id}}',
                bodyCls:'{{module_id.module_body_cls}}',
                iconCls:'{{module_id.module_icon_cls}}',
                cls:'{{module_id.module_cls}}',
                height: {{module_id.module_height}},
                closable: {{../../can_customize}},
                {{#if module_id.module_tools}}
                tools:[
                    {{#each module_id.module_tools}}
                        {
                            iconCls:'{{icon_cls}}',
                            handler:function(){
                                {{icon_handler}}
                            }
                        }
                    {{/each}}
                ],
                {{/if}}
                collapsible: true
                {{#if ../../can_customize}}
                ,
                onClose:function() {
                    //$(this).panel("destroy");
                    $('#pp').portal('remove',$(this));
                    $('#pp').portal('resize');
                    saveLayout('{{../../layout_id}}');
                }
                {{/if}}
            });
            $('#pp').portal('add', {
                panel: p,
                columnIndex:{{col_index}}
            });
        {{/if}}
        {{/each}}
        $('#pp').portal('resize');

        {{#ifCond can_customize false}}
        var panels = $('#pp').portal('getPanels');
        panels.forEach(function(panel){
            $('#pp').portal('disableDragging', panel);
        });
        {{/ifCond}}
    });

    $(function(){

    });
    {{#if can_customize}}
    function openModuleDialog() {
        var module_list_dialog = $('#module_list_dialog').show();
        module_list_dialog.dialog({
            title: '添加组件',
            iconCls : 'icon-add',
            width : 620,
            height : 360,
            top:200,
            modal:true,
            cache: false,
            resizable : false,
            minimizable : false,
            maximizable : false,
            collapsible : false
        });
        module_list_dialog.dialog('open');
    }
    function addModule(id, title, height, cls) {
        // 检查模块是否已经存在
        var mid = 'module_'+id;
        if($('#'+mid).length == 0) {
            var p = $('<div/>').appendTo('body');
            p.panel({
                id: mid,
                title: title,
                href: '/project/portal/module/' + id,
                height: height,
                cls:cls,
                closable: true,
                collapsible: true,
                onClose:function() {
                    $('#pp').portal('remove',$(this));
                    $('#pp').portal('resize');
                    saveLayout('{{layout_id}}');
                }
            });
            $('#pp').portal('add', {
                panel: p,
                columnIndex: 0
            });
            $('#pp').portal('resize');
            saveLayout('{{layout_id}}');
        }
        else {
            alert('模块组件已添加');
        }
    }
    function getLayout() {
        // 获取当前页面模块
        var portal = $('#pp').portal('getPanels');
        var portalColumnTd = $('#pp').find('.portal-column-td');
        var mids = new Array();
        var t = 0;
        for(var i = 0; i < portalColumnTd.length;i++){
            var colomLength = $(portalColumnTd[i]).find('.portal-panel').length;
            for(var j = 0; j < colomLength;j++){
                mids.push(i+':'+(portal[t].panel('options').id).replace('module_',''));
                t++;
            }
        }
        return mids;
    }
    function saveLayout(layoutid) {
        var mids = getLayout();
        $.ajax({
            url: '/project/admin/api/portal/layout/'+layoutid,
            type: 'put',
            data: {'mids':mids.join(',')},
            success: function (data) {
                if(data.success) {
                    //alert(data.msg);
                }
                else {
                    alert(data.msg+',错误代码:'+data.code);
                }
            }
        });
    }
    {{/if}}
</script>