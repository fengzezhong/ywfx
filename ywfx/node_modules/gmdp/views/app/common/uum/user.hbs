<!-- Modal -->
<div id="userModal" class="mydialog" style="padding-top:0px;">
    <div class="row">
        <div class="col-md-12">
            <div class="widget flat radius-bordered">
                <div class="widget-body" style="background-color: #fff;">
                    <div id="registration-form">
                        <form id="userForm" role="form">
                            <div class="form-title bordered-bottom bordered-blue">
                                <b>账号信息</b>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">登陆账号</label>
                                        <input type="text" name="login_account" class="easyui-validatebox form-control" data-options="required:true" placeholder="登陆账号">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">登陆密码</label>
                                        <input type="text" class="form-control" placeholder="登陆密码" readonly="true" value="默认密码为：登陆账号{{projcfg.password_suffix}}">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">归属系统</label><br/>
                                        <select id="user_sys" name="user_sys" class="form-control" style="width: 180px;height:34px;">
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label">状态</label><br/>
